@{
}
@model IEnumerable<GetProductsViewModel>
@foreach (var item in Model)
{

    <div class="card col-md-4 site-card" style="">

        <a href="/product/detail/@item.ID"> <img src="/img/product.png" class="card-img-top" /></a>
        <div class="card-body ">
            <h5 class="card-title">@item.Name</h5>
            <h6 class="card-subtitle mb-2 text-muted">@item.Price</h6>
            <p class="card-text">@item.Description</p>
        </div>
    </div>


}